<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageButton
            android:id="@+id/boton_aleatorio"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/shuffle"
            android:tooltipText="Generar aleatorio"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"/>

        <ImageButton
            android:id="@+id/boton_ganador"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/award"
            android:tooltipText="Ganador sorteo"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/boton_dados"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp"
        android:src="@drawable/dices"
        android:tooltipText="Generar tiradas dado" />

</LinearLayout>